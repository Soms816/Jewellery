{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn"], // Change unused variable errors to warnings
    "react-hooks/rules-of-hooks": "warn",        // Keep enforcing rules for hooks
    "react-hooks/exhaustive-deps": "warn",        // Missing dependency warnings for useEffect
    "@next/next/no-img-element": "warn"           // Warn instead of error for <img> tags
  }
}
